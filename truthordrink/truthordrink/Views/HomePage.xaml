<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="truthordrink.HomePage">

    <StackLayout VerticalOptions="CenterAndExpand">
        <Image Source="todlogo.png" WidthRequest="350" HeightRequest="350"></Image>


        <StackLayout HorizontalOptions="CenterAndExpand"
                     VerticalOptions="CenterAndExpand">
            <Button x:Name="Play"
                    Text="Play"
                    Padding="75,20"
                    Style="{StaticResource Button1}"
                    Clicked="Spelen_Clicked" FontFamily="Roboto-Regular"/>
            <Button x:Name="MyLists"
                    Text="My Lists"
                    Padding="75,20"
                    Style="{StaticResource Button1}"
                    Clicked="MijnLijsten_Clicked"/>
            <Button x:Name="DrinkPage"
                    Text="Drinks"
                    Padding="75,20"
                    Style="{StaticResource Button1}"
                    Clicked="DrinkPage_Clicked"/>
            <Button x:Name="Logout"
                    Text="Logout"
                    Padding="75,20"
                    Style="{StaticResource Button1}"
                    BackgroundColor="OrangeRed"
                    Clicked="Logout_Clicked"/>
        </StackLayout>
        
        
        
    </StackLayout>
    
        
</ContentPage>