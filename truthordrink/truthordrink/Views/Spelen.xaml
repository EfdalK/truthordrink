<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="truthordrink.Spelen">
    <ContentPage.Content>
        
        <StackLayout>
            
            <Label x:Name="TitleLabel"
                   Text="Truth or Drink!"
                   HorizontalTextAlignment="Center"
                   TextColor="White"
                   FontSize="36"/>
            
            <StackLayout HorizontalOptions="Center"
                         VerticalOptions="CenterAndExpand">
                <Label TextColor="White" Text="Choose Players:" FontSize="20"/>
                <Label TextColor="White" Text="Choose List:" FontSize="20"/>
                <Label TextColor="White" Text="Choose Points to win:" FontSize="20"/>

                <Button x:Name="StartButton"
                        Text="Start"
                        Padding="100,25"
                        Style="{StaticResource Button1}"
                        Clicked="StartButton_Clicked"/>

            </StackLayout>
            

            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>