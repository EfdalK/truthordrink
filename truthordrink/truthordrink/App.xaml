<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="truthordrink.App">
    <Application.Resources>
        <ResourceDictionary>
            <!--top navigation bar color-->
            <Color x:Key="Primary">darkorange</Color>
            <Style TargetType="NavigationPage">
                <Setter Property="BarBackgroundColor" Value="{StaticResource Primary}" />
                <Setter Property="BarTextColor" Value="White" />
            </Style>


            <!--Color for all buttons type 1-->
            <Style x:Key="Button1" TargetType="Button">
                <Setter Property="BackgroundColor" Value="DarkOrange"/>
                <Setter Property="TextColor" Value="White"/>
                <Setter Property="BorderColor" Value="White"/>
                <Setter Property="FontSize" Value="25"/>
            </Style>

            <Style TargetType="ContentPage" ApplyToDerivedTypes="True" >
                <Setter Property="BackgroundImageSource" Value="alcoholBackground.jpg" />
            </Style>



        </ResourceDictionary>

        
    </Application.Resources>
</Application>